<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.apd.traveldiary.LoginRegisterController">
    <GridPane hgap="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
        <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS">
            <Label text="Username:"/>
            <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label text="Password:"/>
            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Button fx:id="actionButton" GridPane.columnSpan="2" GridPane.rowIndex="3" text="" onAction="#handleAction"/>
            <Label fx:id="statusLabel" GridPane.columnSpan="2" GridPane.rowIndex="4" text=""/>
        </VBox>
    </GridPane>
</AnchorPane>