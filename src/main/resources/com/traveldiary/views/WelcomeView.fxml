<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.HBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.traveldiary.controllers.MainController" alignment="CENTER" spacing="20">
    <padding><Insets top="50" right="50" bottom="50" left="50"/></padding>
    <Text fx:id="welcomeText" text="Welcome to Travel Diary" style="-fx-font-size: 24px;"/>
    <HBox spacing="20">
        <Button text="Login" onAction="#showLogin" prefWidth="150"/>
        <Button text="Register" onAction="#showRegister" prefWidth="150"/>
    </HBox>
</VBox>
