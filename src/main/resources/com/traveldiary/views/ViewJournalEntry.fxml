<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.traveldiary.controllers.ViewJournalEntryController" spacing="10" alignment="CENTER">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    <Label fx:id="titleLabel" style="-fx-font-size: 18px;"/>
    <Label fx:id="dateLabel" style="-fx-font-size: 14px;"/>
    <Label fx:id="contentLabel" wrapText="true"/>
    <ImageView fx:id="imageView" fitHeight="200" fitWidth="200"/>
    <Button text="Close" onAction="#handleClose"/>
</VBox>
